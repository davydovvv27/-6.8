def insertion_sort(arr):
    # Проходим по всему массиву, начиная со второго элемента
    for i in range(1, len(arr)):
        key = arr[i]     # Элемент, который нужно вставить на правильное место
        j = i - 1        # Индекс предыдущего элемента

        # Перемещаем элементы arr[0..i-1], которые больше key, на одну позицию вперед
        while j >= 0 and arr[j] > key:
            arr[j + 1] = arr[j]
            j -= 1

        # Вставляем key на правильную позицию
        arr[j + 1] = key

def print_array(arr):
    for value in arr:
        print(value, end=' ')
    print()

if __name__ == "__main__":
    array = [12, 11, 13, 5, 6]
    print("Исходный массив:")
    print_array(array)

    insertion_sort(array)

    print("Отсортированный массив:")
    print_array(array)
